<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Fach Detail"
             BackgroundColor="#F5F5F5"
             x:Class="App1.Views.FachDetail">

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label x:Name="SubjectNameLabel"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,20,0,20"/>

            <TableView Intent="Data">
                <TableRoot>
                    <TableSection Title="Noten">
                        <!-- Dynamisch Noten hinzufügen -->
                    </TableSection>
                </TableRoot>
            </TableView>

            <Button Text="Note hinzufügen"
                    BackgroundColor="#6200EE"
                    TextColor="White"
                    CornerRadius="20"
                    VerticalOptions="End"
                    Clicked="OnAddGradeClicked"/>

            <Button Text="Gesamtnote berechnen"
                    BackgroundColor="#03DAC6"
                    TextColor="White"
                    CornerRadius="20"
                    VerticalOptions="End"
                    Margin="0,10,0,0"
                    Clicked="OnCalculateGradeClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
