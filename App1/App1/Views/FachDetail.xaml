<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.FachDetail">

    <StackLayout Padding="10">
        <Label x:Name="FachNameLabel" Text="Fachname" FontSize="Large"/>
        <Entry x:Name="NoteEintrag" Placeholder="Note eingeben"/>
        <Button Text="Note hinzufügen" Clicked="OnAddNoteClicked"/>
        <Button Text="Durchschnitt berechnen" Clicked="OnCalculateNoteClicked"/>
        <StackLayout x:Name="NotenStackLayout"/>
    </StackLayout>
</ContentPage>
